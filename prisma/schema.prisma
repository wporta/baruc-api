generator client {
  provider = "prisma-client-js"
  //output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Congregation {
  id             Int              @id @default(autoincrement())
  name           String
  number         Int?
  PreachingGroup PreachingGroup[]
}

model PreachingGroup {
  id             Int          @id @default(autoincrement())
  name           String
  congregation   Congregation @relation(fields: [congregationId], references: [id])
  congregationId Int
  Publisher      Publisher[]
}

model Publisher {
  id          Int             @id @default(autoincrement())
  firstName   String
  lastName    String
  birthday    DateTime?
  baptismDate DateTime?
  group       PreachingGroup? @relation(fields: [groupId], references: [id])
  groupId     Int?
}
